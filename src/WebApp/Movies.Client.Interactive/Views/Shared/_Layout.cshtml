<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Movies.Client.Interactive</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Movies.Client.styles.css" asp-append-version="true" />
</head>
<body>
	<div class="container">
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<a class="nav-link" href="/">Home</a>
			<a class="nav-link" asp-controller="Movies" asp-action="Index">Movies</a>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				@if (User.Identity.IsAuthenticated)
				{
					<ul class="navbar-nav mr-auto">
						<li class="nav-item active">
							<a class="nav-link" asp-controller="Identity" asp-action="UserInfo">User: @User.Identity.Name</a>
						</li>

						@if (User.IsInRole("admin"))
						{
							<li class="nav-item active">
								<a class="nav-link" asp-controller="Movies" asp-action="OnlyAdmin">Admin</a>
							</li>
						}

						<li class="nav-item active">
							<a class="nav-link" asp-controller="Identity" asp-action="Logout">Logout</a>
						</li>
					</ul>
				}
				else
				{
					<ul class="navbar-nav mr-auto">
						<li class="nav-item active">
							<a class="nav-link" asp-controller="Identity" asp-action="Login">Login</a>
						</li>
					</ul>
				}
			</div>
		</nav>
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
